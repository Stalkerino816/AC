#include<Keypad.h>
#include<LiquidCrystal.h>

LiquidCrystal lcd(12,11,5,4,3,2);

const byte ROWS = 4;
const byte COLS = 4;
char keys[ROWS][COLS] = {
  { '1','2','3','A'},
  { '4','5','6','B'},
  { '7','8','9','C'},
  { '*','0','#','D'}
};
byte rowPins[ROWS]={24,26,28,30};
byte colPins[COLS]={32,34,36,A0};
Keypad keypad = Keypad(makeKeymap(keys),rowPins,colPins,ROWS,COLS);

void setup()
{
  Serial.begin(9600);
  lcd.begin(16,2);
}

void loop()
{
  
  char key = NO_KEY;
  key = keypad.getKey();
  if (key != NO_KEY)
  {
  lcd.print(key);
  }
}
